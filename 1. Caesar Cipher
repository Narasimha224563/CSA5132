#include <stdio.h>
#include <ctype.h>

int main() {
    char text[100];
    int k;
    gets(text);
    scanf("%d", &k);

    for(int i=0;text[i];i++){
        if(isalpha(text[i])){
            char base = islower(text[i]) ? 'a' : 'A';
            text[i] = (text[i]-base+k)%26 + base;
        }
    }
    printf("%s", text);
    return 0;
}
